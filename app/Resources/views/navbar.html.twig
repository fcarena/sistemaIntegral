{% block mainHeader %}
<nav class="headerbar">
    <div class="headerbar-left">
        <ul class="header-nav header-nav-options">
            <li class="header-nav-brand">
                <div class="brand-holder">
                    <a href="{% block urlHomepage %}{% endblock %}">
                        <span class="text-lg text-bold text-warning">	{% block sistemaNombre %}{% endblock %}</span>
                    </a>
                </div>
            </li>
            {% block botonMenu %}
              <li class="hidden-xs"><a href="javascript:toggleMainMenu();" id="toggle-main-menu"><i class="mi">&#xE8FE;</i></a></li>
            {% endblock %}
        </ul>
    </div>
    <div class="headerbar-right toggle-menu">
        <ul class="header-nav header-nav-options">
            <li><a href="#" data-toggle="collapse" data-target="#mainMenu"><i class="mi">&#xE8FE;</i></a></li>
        </ul>
    </div>
    <div class="headerbar-right secondbar">
       {% block menuNotificaciones %}
        <ul class="header-nav header-nav-options">
            <li class="dropdown">
              {% block menuNotificacionesContenido %}
              {% endblock menuNotificacionesContenido %}
            </li>
        </ul>
        {% endblock menuNotificaciones %}

        {% block menuUsuario %}
        <ul class="header-nav profile">
            <li class="dropdown">
                <a href="#" data-target="dropdown-menu" class="dropdown-toggle" data-toggle="dropdown">
                    <img src="{% if app.user.imageType %}data:{{app.user.getImageType() }};base64,{{ app.user.getImage()  }}{% else %}{{ asset('images/profile.jpg') }}{% endif %}" alt="" class="img-circle">
                    <span class="info">
                        {{app.user.apellido}}, {{app.user.nombre}}
                        <small>{{ app.user.roles[0] |replace({'ROLE_SUPER_ADMIN': "Super Administrador", 'ROLE_ADMIN': "Administrador", 'ROLE_USER': "Alumno"}) }}</small>
                    </span>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="#"><i class="mi">&#xE7FD;</i> Perfil</a></li>
                    <li><a href="#"><i class="mi">&#xE899;</i> Lock</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}"><i class="mi">&#xE8AC;</i> Cerrar Sesi√≥n</a></li>
                </ul>
            </li>
        </ul>

        {% endblock menuUsuario %}
    </div>
</nav>

{% endblock %}
