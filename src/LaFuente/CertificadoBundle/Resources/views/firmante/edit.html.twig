{% extends "LaFuenteCertificadoBundle::default.html.twig" %}

{% block lugar %}
    <li><a href="{{ path('firmante_index') }}">Firmantes</a></li>
    <li class="active">Editar {{ firmante.nombre }}</li>
{% endblock lugar %}

{% block main %}
    {{ form_start(edit_form, {'attr': {'enctype': 'multipart/form-data'}}) }}
     <div class="overflow">
        <div class="col-md-7 col-md-offset-2">
            <div class="panel panel-default ">
                <div class="panel-heading"><span class="glyphicon glyphicon-plus">Editando {{firmante.nombre}}</span>
                </div>
                    {{ form_widget(edit_form._token) }}
                <div class="panel-body form-group ">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Nombre</label>
                            {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'nombre'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label>DNI</label>
                            {{ form_widget(edit_form.dni, {'attr': {'class': 'form-control', 'placeholder': 'nro DNI'}}) }}
                        </div>
                    </div>
                    <div class="row margin-top1">
                        <div class="col-md-6">
                            <label>Firma Digital</label>
                            <input type="file" id="firmante_firma" name="firmante[firma]" class="form-control">
                            <img alt="firma" src="data:{{type}};base64,{{ firma }}" class="img-thumbnail"/>

                        </div>
                        <div class="col-md-6">
                            <label>Rol</label>
                            {{ form_widget(edit_form.tipoRolFirmante, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row margin-top1">
                        <div class="col-md-6">
                            <label>Tareas</label>
                            {{ form_widget(edit_form.jobs, {'attr': {'class': 'form-control', 'placeholder': 'mail@server.com'}}) }}
                        </div>
                        <div class="col-md-6">
                            <label>Tareas Agregadas</label>
                            <ul>
                                <li>sin tarea</li>
                            </ul>
                        </div>
                    </div>
                   
                    <div class="margin-top1">
                        <input class="btn btn-primary dropdown-toggle col-md-6" type="submit" value="Editar" />
                        <a href="{{ path('firmante_delete', { 'id': firmante.id }) }}" class="btn btn-danger dropdown-toggle col-md-6">Eliminar</a>
                    </div>


                </div>
            </div>
        </div>
    </div>
    {{ form_end(edit_form) }}
{% endblock %}

