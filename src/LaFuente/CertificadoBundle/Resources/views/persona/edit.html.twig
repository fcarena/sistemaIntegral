{% extends "LaFuenteCertificadoBundle::layout.html.twig" %}

{% set activeMenu = "persona" %}

{% block breadcrumb %}
  <li><a href="#">á¹”ersona</a></li>
  <li class="active">Editar</li>
{% endblock %}

{% block sectionBody %}
<h1>Editando Persona</h1>
{{ form_start(edit_form) }}
    <div class="form-group label-floating is-empty">
        <label class="control-label">Nombre</label>
        {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'nombre'}}) }}
        <span class="material-input"></span>
    </div>
    <div class="form-group label-floating is-empty">
      <label class="control-label">DNI</label>
      {{ form_widget(edit_form.dni, {'attr': {'class': 'form-control', 'placeholder': 'nro DNI'}}) }}
      <span class="material-input"></span>
    </div>
    <div class="form-group label-floating is-empty">
      <label class="control-label">Email</label>
      {{ form_widget(edit_form.email, {'attr': {'class': 'form-control', 'placeholder': 'mail@server.com'}}) }}
      <span class="material-input"></span>
    </div>
    <div class="form-group label-floating is-empty">
      <label class="control-label">Rol</label>
      {{ form_widget(edit_form.tipoRolPersona, {'attr': {'class': 'form-control'}}) }}
      <span class="material-input"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Crear" />
 {{ form_end(edit_form) }}

{% endblock %}
