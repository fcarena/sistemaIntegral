{% extends "LaFuenteCertificadoBundle::default.html.twig" %}
{% block lugar %}
    <li class="active">Tipo de Roles</li>
{% endblock lugar %}
{% block main %}
    <a href="{{ path('tiporolpersona_new') }}">
        <div class="btn btn-primary dropdown-toggle margin-top1">
            <span class="glyphicon glyphicon-plus"></span>
                Agregar nuevo Tipos de Rol de Personas
        </div>
    </a>
    <h1>Lista de Tipos de Rol de Personas</h1>
    <div class="table-responsive">
        <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tipoRolPersona in tipoRolPersonas %}
            <tr>
                <td><a href="{{ path('tiporolpersona_show', { 'id': tipoRolPersona.id }) }}">{{ tipoRolPersona.id }}</a></td>
                <td>{{ tipoRolPersona.nombre }}</td>
                <td>
                    <a title="Ver" class="btn btn-primary" href="{{ path('tiporolpersona_show', { 'id': tipoRolPersona.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                    <a title="Modificar" class="btn btn-primary" href="{{ path('tiporolpersona_edit', { 'id': tipoRolPersona.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
