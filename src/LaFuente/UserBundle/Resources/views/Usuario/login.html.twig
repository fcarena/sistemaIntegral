{% extends 'base_limpio.html.twig' %}
{% block sectionBody %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-lock"></span> Identificarse
                </div>
                <div class="panel-body">
                    {% if error %}
                        <div id="login-error" class="alert alert-danger">La contraseña o el nombre de usuario es incorrecto</div>
                    {% endif %}
                    <form class="form-horizontal" role="form" title="formulario de login" action="{{ path('login_check') }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="row">
                      <div class="col-md-10 col-md-offset-1">
                        <div class="form-group has-warning is-empty">
                            <div class="form-control-wrapper">
                              <input class="form-control input-lg empty" name="_username" type="text" required="">
                              <div class="floating-label">
                                Nombre de Usuario
                              </div>
                              <span class="material-input"></span>
                            </div>
                        </div>
                      </div>
                      <div class="col-md-10 col-md-offset-1">
                        <div class="form-group has-warning is-empty">
                            <div class="form-control-wrapper">
                              <input class="form-control input-lg empty" name="_password" type="password" required="">
                              <div class="floating-label">
                                Contraseña
                              </div>
                              <span class="material-input"></span>
                            </div>
                        </div>
                      </div>

                      <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
                          <button type="submit" class="btn btn-warning" title="entrar">
                            Entrar
                          </button>
                          <button type="reset" class="btn btn-default" title="limpiar campos">
                            Limpiar
                          </button>
                        </div>
                      </div>
                    </div>
                    </form>
                </div>
                <div class="panel-footer">
                    Si no estas registrado comunicate con el administrador</div>
                </div>
            </div>
        </div>
{% endblock %}
